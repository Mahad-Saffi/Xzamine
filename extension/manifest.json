{
  "manifest_version": 3,
  "name": "Legal Tweet Checker",
  "version": "1.0",
  "description": "AI-powered Chrome extension to check tweets for compliance with PECCA laws.",
  "host_permissions": [
    "https://x.com/*",
    "http://127.0.0.1:3000/*"
  ],
  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "./background.js"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": {
      "16": "./icons/icon16.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["./content.js"]
    }
  ]
}